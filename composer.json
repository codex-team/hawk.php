{
    "name": "codex-team/hawk.php",
    "description": "PHP errors Catcher module for Hawk.so",
    "keywords": ["hawk", "php", "error", "catcher"],
    "type": "library",
    "version": "2.2.9",
    "license": "MIT",
    "require": {
        "ext-curl": "*",
        "ext-json": "*",
        "php": "^7.2 || ^8.0",
        "jean85/pretty-package-versions": "^1.5 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "friendsofphp/php-cs-fixer": "^2.15",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Hawk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hawk\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "csfix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --using-cache=no --verbose"
    }
}
